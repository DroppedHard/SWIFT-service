{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "A SWIFT code service",
        "title": "swift-service",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Author",
            "email": "szymon.woojcik01@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://github.com/DroppedHard/SWIFT-service/blob/main/LICENSE"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/v1",
    "paths": {
        "/health": {
            "get": {
                "description": "endpoint to verify whether system is healthy, or not",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "status"
                ],
                "summary": "System health check",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    }
                }
            }
        },
        "/swift-codes/": {
            "post": {
                "description": "Use it to add new bank data - verify data correctiness",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "bank"
                ],
                "summary": "Add bank data to the system",
                "parameters": [
                    {
                        "description": "Bank data",
                        "name": "bankData",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/types.BankDataDetails"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    }
                }
            }
        },
        "/swift-codes/country/{countryISO2}": {
            "get": {
                "description": "Use it to fetch banks data by country ISO2 code",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "bank"
                ],
                "summary": "Country code to bank data",
                "parameters": [
                    {
                        "type": "string",
                        "description": "country ISO2 code",
                        "name": "countryISO2",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/types.CountrySwiftCodesResponse"
                        }
                    },
                    "206": {
                        "description": "Partial Content",
                        "schema": {
                            "$ref": "#/definitions/types.CountrySwiftCodesResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    }
                }
            }
        },
        "/swift-codes/{swiftCode}": {
            "get": {
                "description": "Use it to fetch bank data by SWIFT code - if it is a HQ it branches will be retrieved too",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "bank"
                ],
                "summary": "Swift code to bank data",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bank swift code",
                        "name": "swiftCode",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/types.BankHeadquatersResponse"
                        }
                    },
                    "206": {
                        "description": "Partial Content",
                        "schema": {
                            "$ref": "#/definitions/types.BankHeadquatersResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    }
                }
            },
            "delete": {
                "description": "Use it to delete bank data by SWIFT code",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "bank"
                ],
                "summary": "Delete bank data from the system",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bank swift code",
                        "name": "swiftCode",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/types.ReturnMessage"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "types.BankDataCore": {
            "type": "object",
            "required": [
                "address",
                "bankName",
                "countryISO2",
                "swiftCode"
            ],
            "properties": {
                "address": {
                    "type": "string"
                },
                "bankName": {
                    "type": "string"
                },
                "countryISO2": {
                    "type": "string"
                },
                "isHeadquarter": {
                    "type": "boolean"
                },
                "swiftCode": {
                    "type": "string"
                }
            }
        },
        "types.BankDataDetails": {
            "type": "object",
            "required": [
                "address",
                "bankName",
                "countryISO2",
                "countryName",
                "swiftCode"
            ],
            "properties": {
                "address": {
                    "type": "string"
                },
                "bankName": {
                    "type": "string"
                },
                "countryISO2": {
                    "type": "string"
                },
                "countryName": {
                    "type": "string"
                },
                "isHeadquarter": {
                    "type": "boolean"
                },
                "swiftCode": {
                    "type": "string"
                }
            }
        },
        "types.BankHeadquatersResponse": {
            "type": "object",
            "required": [
                "address",
                "bankName",
                "countryISO2",
                "countryName",
                "swiftCode"
            ],
            "properties": {
                "address": {
                    "type": "string"
                },
                "bankName": {
                    "type": "string"
                },
                "branches": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/types.BankDataCore"
                    }
                },
                "countryISO2": {
                    "type": "string"
                },
                "countryName": {
                    "type": "string"
                },
                "isHeadquarter": {
                    "type": "boolean"
                },
                "swiftCode": {
                    "type": "string"
                }
            }
        },
        "types.CountrySwiftCodesResponse": {
            "type": "object",
            "properties": {
                "countryISO2": {
                    "type": "string"
                },
                "countryName": {
                    "type": "string"
                },
                "swiftCodes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/types.BankDataCore"
                    }
                }
            }
        },
        "types.ReturnMessage": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        }
    }
}